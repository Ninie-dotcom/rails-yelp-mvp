<h1>Restaurant</h1>
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>


<ul>
  <% @restaurant.reviews.each do |review| %>
    <li> <%= review.content %>   <%= "*" * review.rating %>
 </li>
  <% end %>
</ul>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATING.sort %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to 'back', restaurants_path %>
